@model Egresados.Models.Articulo
@{
    ViewData["Title"] = "Detalle de Articulo";
}

<div class="container my-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="font-weight-bold">@Model.Nombre</h4>
                </div>

            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img src="@Model.UrlImagen" class="img-fluid rounded shadow" alt="Imagen del artículo">
                </div>
                <div class="col-md-6">
                    <p class="text-justify font-weight-bold">@Html.Raw(Model.Descripcion)</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-2">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver al Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>
