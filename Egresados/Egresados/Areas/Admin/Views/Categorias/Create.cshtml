@model Egresados.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoría";
}

<link href="~/css/createadmin.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center text-primary mb-4">Crear una nueva Categoría</h3>

            <form method="POST" asp-action="Create" class="border p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Orden">Orden de Visualización</label>
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el orden de visualización" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <partial name="_VistaCrearVolver" />
                </div>
            </form>
        </div>
    </div>
</div>
