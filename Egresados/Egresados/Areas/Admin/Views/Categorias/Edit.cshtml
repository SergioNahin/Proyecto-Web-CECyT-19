@model Egresados.Models.Categoria
@{
    ViewData["Title"] = "Editar Categoría";
}

<link href="~/css/editadmin.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form method="POST" asp-action="Edit" class="border rounded p-4 shadow">
                <h3 class="text-center mb-4 text-primary">Editar Categoría</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label font-weight-bold text-primary"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Orden" class="form-label font-weight-bold text-primary"></label>
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el orden de visualización" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>

                <div class="form-group row ">

                    <div class="col mb-3">
                        <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                    </div>
                    <div class="col mb-3">
                        <a asp-action="Index" class="btn btn-danger form-control">Volver a lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
