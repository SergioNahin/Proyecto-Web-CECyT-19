<link href="~/css/createadmin.css" rel="stylesheet" />
@model Egresados.Models.ViewModels.ArticuloVM
@{
    ViewData["Title"] = "Crear Articulo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center text-primary mb-4">Crear un nuevo Articulo</h3>

            <form method="POST" asp-action="Create" enctype="multipart/form-data" class="border p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input asp-for="Articulo.Nombre" class="form-control" placeholder="Ingrese el nombre del Artículo" />
                            <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Descripción</label>
                            <textarea asp-for="Articulo.Descripcion" class="form-control" style="height: 200px;"></textarea>
                            <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Categoría</label>
                            @Html.DropDownListFor(m => m.Articulo.CategoriaId, Model.ListaCategorias, "-Por Favor Seleccione Una Categoría-", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Imagen</label>
                            <input type="file" name="archivos" id="subidaArchivo" multiple class="form-control" />
                            <span asp-validation-for="Articulo.UrlImagen" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-12 text-center">
                        <partial name="_VistaCrearVolver" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
