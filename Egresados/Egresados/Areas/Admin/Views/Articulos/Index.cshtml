<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Artículos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-outline-primary"><i class="fa-solid fa-square-plus"></i> Crear Nuevo Artículo</a>
        </div>
    </div>

    <br />

    <div class="table-responsive">
        <table id="tblArticulos" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
