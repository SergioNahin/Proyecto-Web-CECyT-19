@model Egresados.Models.Slider
@{
    ViewData["Title"] = "Crear Presentación";
}

<link href="~/css/createadmin.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center text-primary mb-4">Crear una nueva Presentación</h3>

            <form method="POST" asp-action="Create" enctype="multipart/form-data" class="border p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="Nombre">Nombre de la Presentación</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la presentación" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Estado">Estado</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="bi bi-eye-fill"></i></span>
                        </div>
                        <input asp-for="Estado"/>
                    </div>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="UrlImagen">Imagen de la Presentación</label>
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <partial name="_VistaCrearVolver" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
